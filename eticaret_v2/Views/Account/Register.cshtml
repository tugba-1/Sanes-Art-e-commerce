            <div class="form-group row">
            <label asp-for="@Model.FirstName" class="col-sm-2 col-form-label">İsim</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="@Model.FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.LastName" class="col-sm-2 col-form-label">Soyisim</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="@Model.LastName">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
            <div class="form-group row">
                <label asp-for="@Model.UserName" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                <div class="col-sm-10">
                    <input id="editor" class="form-control" asp-for="@Model.UserName"></input>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Email" class="col-sm-2 col-form-label">E-posta</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Password" class="col-sm-2 col-form-label">Şifre</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.RePassword" class="col-sm-2 col-form-label">Tekrar Şifre</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.RePassword">
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>

            @*}*@
