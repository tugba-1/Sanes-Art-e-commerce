@model eticaret_v2.ViewModels.ResetPasswordModel

<h1 class="h3">Şifre Yenileme</h1>
<hr>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Account" asp-action="ResetPassword" method="POST">
            <input type="hidden" asp-for="token" />

            <div class="form-group row">
                <label asp-for="@Model.Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input id="editor" class="form-control" asp-for="@Model.Email"></input>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="@Model.Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="@Model.Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Reset</button>
                </div>
            </div>

            @*}*@
        </form>
    </div>
</div>


